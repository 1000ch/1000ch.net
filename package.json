{
  "name": "1000ch.net",
  "private": true,
  "description": "Happens on me, Happens from me.",
  "license": "MIT",
  "repository": "1000ch/1000ch.net",
  "author": {
    "name": "1000ch",
    "email": "shogosensui@gmail.com",
    "web": "https://github.com/1000ch"
  },
  "config": {
    "postcss": "--use postcss-import --use autoprefixer --use cssnano"
  },
  "scripts": {
    "start": "npm run css -- --watch & hugo server",
    "lint": "stylelint static/css/*.css",
    "css": "postcss $npm_package_config_postcss --no-map --output public/css/app.css static/css/app.css",
    "brotli": "ls public/css/app.min.css | xargs -I{} bro --quality 10 --input {} --output {}.br",
    "build": "npm run css && npm run brotli"
  },
  "devDependencies": {
    "autoprefixer": "^7.1.0",
    "cssnano": "^3.10.0",
    "postcss-cli": "^4.0.0",
    "postcss-import": "^10.0.0",
    "stylelint": "^8.0.0",
    "stylelint-config-standard": "^17.0.0"
  }
}
