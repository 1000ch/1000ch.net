  "scripts": {
    "start": "run-p serve css:watch",
    "serve": "hugo server",
    "lint": "stylelint static/css/*.css",
    "css": "postcss --no-map --output public/css/app.css static/css/app.css",
    "css:watch": "npm run css -- --watch",
