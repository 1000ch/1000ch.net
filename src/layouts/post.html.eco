<!doctype html>
<html>
  <head>
    <%- @partial('meta') %>
  </head>
  <body>
    <div class='header-container'>
      <%- @partial('header') %>
    </div>
    <div class='container'>
      <div class='main'>
        <%- @partial('post-header') %>
        <div class='main-content'>
        <div>
          <span class="label label--gray"><%=@moment(@document.date).format('YYYY.MM.DD')%></span>
        </div>
          <%- @content %>
        </div>
        <%- @partial('post-footer') %>
      </div>
      <div class='aside'>
        <div class='aside-content'>
          <%- @partial('aside') %>
        </div>
      </div>
    </div>
    <div class='footer-container'>
      <%- @partial('footer') %>
    </div>
    <%- @partial('script') %>
  </body>
</html>