.layout-container
  display: block
  @media screen and (min-width: 960px)
    padding-left: 33%

.layout-aside
  display: block
  color: #fff
  @media screen and (min-width: 960px)
    position: fixed
    top: 0
    left: 0
    bottom: 0
    width: 33%

  h1
    font-size: 48px
  h2
    font-size: 36px
  h3
    font-size: 24px
  a
    color: #fff
    text-decoration: underline
  a:hover,
  a:active,
  a.active
    color: #fff
    text-decoration: none

.layout-aside-bricks
  display: block
  &.bricks--dark
    background: rgba(47, 11, 136, 1)
  &.bricks--normal
    background: rgba(76, 34, 151, 1)
  &.bricks--light
    background: rgba(105, 57, 166, 1)

.layout-aside-bricks::after
  clear: both
  display: table
  content: ''

.layout-aside-bricks__brick
  display: inline-block
  float: left
  &.brick--left
    text-align: left
  &.brick--center
    text-align: center
  &.brick--right
    text-align: right

  &.brick--12
    width: 100%
  &.brick--6
    width: 50%
  &.brick--4
    width: 33%
  &.brick--3
    width: 25%
  &.brick--2
    width: 12.5%
  &.brick--1
    width: 6.25%

  &.bricks--dark
    background: rgba(47, 11, 136, 1)
  &.bricks--dark:hover,
  &.bricks--dark.is-active
    background: rgba(47, 11, 136, 0.95)
  &.bricks--normal
    background: rgba(76, 34, 151, 1)
  &.bricks--normal:hover,
  &.bricks--normal.is-active
    background: rgba(76, 34, 151, 0.95)
  &.bricks--light
    background: rgba(105, 57, 166, 1)
  &.bricks--light:hover,
  &.bricks--light.is-active
    background: rgba(105, 57, 166, 0.95)

.layout-aside-bricks__brick-inner
  display: block
  padding: 10px

.layout-main
  display: block

.layout-main-post
  p, h1, h2, h3, h4, pre
    padding: 0 10px
  ul, ol
    padding-left: 2em