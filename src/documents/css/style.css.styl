.h1
  font-size 2em
  font-weight bold

.h2
  font-size 1.5em
  font-weight bold

.h3
  font-size 1.17em
  font-weight bold

.highlight
  background #f3df49

.header
  margin 0 auto
  padding 10px
  max-width 960px

.header-menu
  display table

.header-menu__item
  display table-cell
  padding 5px
  
.footer
  margin 0 auto
  padding 10px
  max-width 960px

.container
  margin 0 auto
  max-width 960px
  display flex
  flex-direction row
  @media screen and (max-width: 640px)
    flex-direction column

.aside
  min-width 320px
  max-width 320px
  margin 0 auto
  @media screen and (max-width: 640px)
    min-width 100%

.aside-content
  padding 10px

.main
  width 100%
  margin 0 auto
  @media screen and (max-width: 640px)
    min-width 100%

.main-content
  padding 10px
  ul, ol
    padding-left 2em
    
.post-share
  display table

.post-share__item
  display table-cell
  padding 5px
  font-size 24px

.post-nav
  display table

.post-nav__item
  display table-cell
  padding 5px

.fb-like-box
  background #fff

.label
  border-radius 4px
  margin 4px
  padding 4px

.label--gray
  color #2e2e2c
  background #eee

.label--red
  color #fff
  background #e2007a

.label--blue
  color #fff
  background #199ad5

.label--yellow
  color #2e2e2c
  background #f3df49
